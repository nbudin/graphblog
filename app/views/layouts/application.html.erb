<!DOCTYPE html>
<html>
  <head>
    <title>Graphblog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="navbar bg-dark navbar-fixed navbar-dark mb-4">
      <div class="container">
        <%= link_to '15 Minute Blog', root_path, class: 'navbar-brand' %>

        <ul class="navbar-nav">
          <li class="nav-item">
            <%= link_to 'Admin', posts_path, class: 'nav-link' %>
          </li>
        </ul>
      </div>
    </div>

    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
